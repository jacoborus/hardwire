    "mkdirp": "^0.5.0",
    "mongoose": "^4.0.1",
    "mongoose-validator": "^1.0.3",
    "morgan": "^1.5.2",
    "multer": "^0.1.8",
    "nanobar": "^0.2.1",
    "ncp": "^2.0.0",
