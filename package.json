{
  "name": "hardwire",
  "version": "0.4.1",
  "description": "CMS framework",
  "main": "index.js",
  "scripts": {
    "test": "echo \"Error: no test specified\" && exit 1",
    "postinstall": "npm run build-js && npm run build-css && npm run boilerplate",
    "build-js": "mkdir -p ./app//public/js && cat ./node_modules/nanobar/nanobar.js ./node_modules/submitter/submitter.js ./src/js/baseadmin.js ./src/js/sidetool.js ./src/js/posttaxonomy.js > ./app/public/js/hw-baseadmin.js",
    "build-css": "mkdir -p ./app/public/css && cat ./src/css/pure-css.min.css ./src/css/side-menu.css ./src/css/admin.css >  ./app/public/css/hw-baseadmin.css",
    "boilerplate": "node ./utils/preconfig.js"
  },
  "keywords": [
    "CMS"
  ],
  "url": "https://github.com/jacoborus/hardwire",
  "repository": {
    "type": "git",
    "url": "git@github.com:jacoborus/hardwire.git"
  },
  "dependencies": {
    "async": "^0.9.0",
    "body-parser": "^1.6.5",
    "compression": "^1.0.2",
    "connect-flash": "^0.1.1",
    "connect-mongo": "^0.7.0",
    "connect-timeout": "^1.1.0",
    "cookie-parser": "^1.1.0",
    "cookies": "^0.5.0",
    "cp": "^0.2.0",
    "curlymail": "^1.1.2",
    "debug": "^2.1.1",
    "deepjson": "0.0.5",
    "errorhandler": "^1.0.1",
    "express": "^4.8.5",
    "express-session": "^1.7.6",
    "filesaver": "0.0.10",
    "jade": "^1.3.1",
    "method-override": "^2.1.1",
