    "mongoose": "^3.9.1",
    "mongoose-validator": "^1.0.0",
    "morgan": "^1.2.3",
    "multer": "^0.1.4",
    "nanobar": "^0.2.0",
    "ncp": "^2.0.0",
    "passport": "^0.2.0",
