{
  "name": "hardwire",
  "version": "0.8.1",
  "description": "Dynamic website generator. Work in progress",
  "main": "index.js",
  "scripts": {
    "test": "echo \"Error: no test specified\" && exit 1",
    "postinstall": "npm run build-js && npm run build-css && npm run addscripts",
    "build-js": "mkdir -p ./app/public/js && cat ./node_modules/nanobar/nanobar.js ./src/js/submitter.js ./src/js/baseadmin.js ./src/js/sidetool.js ./src/js/posttaxonomy.js > ./app/public/js/hw-baseadmin.js",
    "build-css": "mkdir -p ./app/public/css && cat ./src/css/pure-css.min.css ./src/css/side-menu.css ./src/css/sidetool.css ./src/css/admin.css >  ./app/public/css/hw-baseadmin.css",
    "addscripts": "node ./utils/addscripts.js"
  },
  "keywords": [
    "CMS"
  ],
  "url": "https://github.com/jacoborus/hardwire",
  "repository": {
    "type": "git",
    "url": "git@github.com:jacoborus/hardwire.git"
  },
  "dependencies": {
    "async": "^0.9.0",
    "body-parser": "^1.12.2",
    "compression": "^1.4.3",
